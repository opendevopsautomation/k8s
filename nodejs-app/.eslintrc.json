{
    "root": true,
    "env": {
        "node": true
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "eol-last": 2,
        "space-in-parens": ["error", "never"],
        "no-multiple-empty-lines": 1,
        "prefer-const": "error",
        "space-infix-ops": "error",
        "no-useless-escape": "off",
        "require-atomic-updates": "off",
        "no-invalid-regexp": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-debugger": 2
    }
}
